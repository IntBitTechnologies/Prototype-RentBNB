<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/i1_10dp_margin"
    android:layout_marginTop="@dimen/i1_5dp_margin"
    android:background="@color/background"
    android:clickable="true"
    android:focusable="true">

    <View
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/background" />

    <com.intbit.rentbnb.support.CircleImageView
        android:id="@+id/rowitem_requestList_profile_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/header"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="-32dp"
        android:layout_marginLeft="@dimen/i1_20dp_margin"
        android:elevation="1dp"
        android:src="@drawable/paul_walker" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rowitem_requestList_profile_image_view"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            style="@style/i1_card_view_without_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/product_details_relative_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/i1_10dp_margin"
                    android:layout_marginLeft="@dimen/i1_10dp_margin"
                    android:layout_marginRight="@dimen/i1_10dp_margin"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/i1_30dp_padding">

                    <TextView
                        android:id="@+id/rowitem_requestList_name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/i1_5dp_margin"
                        android:text="Jack Albert"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <ImageView
                        android:id="@+id/posted_time_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/rowitem_requestList_name_text_view"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/i1_10dp_margin"
                        android:src="@drawable/time_icon" />

                    <TextView
                        android:id="@+id/rowitem_requestList_posted_date_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rowitem_requestList_name_text_view"
                        android:layout_toRightOf="@id/posted_time_imageView"
                        android:text="February 6, 2017" />

                    <View
                        android:id="@+id/rowitem_requestList_underline"
                        style="@style/i1_underline_1dp"
                        android:layout_width="match_parent"
                        android:layout_below="@id/rowitem_requestList_posted_date_TextView"
                        android:layout_marginBottom="@dimen/i1_10dp_margin"
                        android:layout_marginTop="@dimen/i1_10dp_margin" />

                    <TextView
                        android:id="@+id/rowitem_requestList_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rowitem_requestList_underline"
                        android:layout_marginBottom="@dimen/i1_5dp_margin"
                        android:text="Magic Mouse 2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <TextView
                        android:id="@+id/rowitem_requestList_category_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/rowitem_requestList_title_text_view"
                        android:layout_marginBottom="@dimen/i1_5dp_margin"
                        android:text="Category :"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <TextView
                        android:id="@+id/rowitem_requestList_category_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rowitem_requestList_title_text_view"
                        android:layout_marginLeft="@dimen/i1_10dp_margin"
                        android:layout_toRightOf="@id/rowitem_requestList_category_title_text_view"
                        android:text="Electronics" />

                    <TextView
                        android:id="@+id/rowitem_requestList_amount_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/rowitem_requestList_category_textView"
                        android:layout_marginBottom="@dimen/i1_5dp_margin"
                        android:text="Amount :"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <TextView
                        android:id="@+id/rowitem_requestList_amount_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rowitem_requestList_category_textView"
                        android:layout_marginLeft="@dimen/i1_10dp_margin"
                        android:layout_toRightOf="@id/rowitem_requestList_amount_title_text_view"
                        android:text="$30 - $40" />

                    <TextView
                        android:id="@+id/rowitem_requestList_product_description_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rowitem_requestList_amount_textView"
                        android:layout_marginTop="@dimen/i1_10dp_margin"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. It has been the industry's standard dummy text since 1500s." />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_details_relative_layout"
                    android:background="@color/button_disabled"
                    android:paddingBottom="@dimen/i1_5dp_padding"
                    android:paddingLeft="@dimen/i1_10dp_padding"
                    android:paddingRight="@dimen/i1_10dp_padding"
                    android:paddingTop="@dimen/i1_5dp_padding">

                    <ImageView
                        android:id="@+id/posted_calendar_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/i1_10dp_margin"
                        android:src="@drawable/calendar_icon"
                        android:tint="@color/white" />

                    <TextView
                        android:id="@+id/rowitem_requestList_from_to_date_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/posted_calendar_imageView"
                        android:text="From: February 7, 2017
To: February 11, 2017"
                        android:textColor="@color/white" />

                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</RelativeLayout>