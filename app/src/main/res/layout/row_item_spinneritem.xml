<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="fill_horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/category_cars"
        android:layout_margin="@dimen/i1_5dp_margin"
        android:id="@+id/rowitem_spinneritem_icon_imageview" />

    <TextView
        android:id="@+id/rowitem_spinneritem_name_textview"
        style="@style/spinnerItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/app_name"
        android:layout_margin="@dimen/i1_5dp_margin"
        android:textAppearance="@style/i1_8R"
        android:textColor="@color/primary_text" />

</LinearLayout>