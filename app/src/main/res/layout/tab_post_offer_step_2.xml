<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/i1_card_view_without_content_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/i1_5dp_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/i1_10dp_margin"
                        android:padding="@dimen/i1_5dp_margin"
                        android:text="@string/rent_to_own" />

                    <android.support.design.widget.TextInputLayout
                        style="@style/i1_text_input_layout"
                        android:layout_marginTop="@dimen/i1_0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tab_post_offer_step_3_unitSale_price_EditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/ic_price_icon"
                            android:drawablePadding="@dimen/i1_10dp_margin"
                            android:hint="@string/purchase_amount"
                            android:inputType="textCapWords"
                            android:lines="1" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/tab_post_offer_step_3_price_cardView"
                style="@style/i1_card_view_without_content_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/i1_5dp_padding">

                <LinearLayout
                    android:id="@+id/tab_post_offer_step_1_price_linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        style="@style/i1_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tab_post_offer_step_3_dailyRent_price_EditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/ic_price_icon"
                            android:drawablePadding="@dimen/i1_10dp_margin"
                            android:hint="@string/enter_daily_rental_price"
                            android:inputType="textCapWords"
                            android:lines="1" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        style="@style/i1_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tab_post_offer_step_3_weeklyRent_price_EditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/ic_price_icon"
                            android:drawablePadding="@dimen/i1_10dp_margin"
                            android:hint="@string/enter_weekly_rental_price"
                            android:inputType="textCapWords"
                            android:lines="1" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/i1_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tab_post_offer_step_3_monthlyRent_price_EditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/ic_price_icon"
                            android:drawablePadding="@dimen/i1_10dp_margin"
                            android:hint="@string/enter_monthly_rental_price"
                            android:inputType="textCapWords"
                            android:lines="1" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/tab_post_offer_step_3_deposit_cardView"
                style="@style/i1_card_view_without_content_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/i1_5dp_padding">

                <android.support.design.widget.TextInputLayout
                    style="@style/i1_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/tab_post_offer_step_3_deposit_price_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_price_icon"
                        android:drawablePadding="@dimen/i1_10dp_margin"
                        android:hint="@string/enter_deposit_amount"
                        android:inputType="textCapWords"
                        android:lines="1" />

                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                style="@style/i1_card_view_without_content_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab_post_offer_step_1_price_linearLayout"
                android:paddingTop="@dimen/i1_5dp_padding"
                android:paddingBottom="@dimen/i1_5dp_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/i1_10dp_margin"
                        android:padding="@dimen/i1_5dp_margin"
                        android:text="Do you want to Deliver" />

                    <android.support.design.widget.TextInputLayout
                        style="@style/i1_text_input_layout"
                        android:layout_marginTop="@dimen/i1_0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/ic_delivery_icon"
                            android:drawablePadding="@dimen/i1_10dp_margin"
                            android:hint="Within distance in miles"
                            android:inputType="textCapWords"
                            android:lines="1" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/i1_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/ic_price_icon"
                            android:drawablePadding="@dimen/i1_10dp_margin"
                            android:hint="Price per mile"
                            android:inputType="textCapWords"
                            android:lines="1" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/tab_post_offer_step_2_next_button"
                style="@style/i1_button_standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/button_complete_step2" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>



</RelativeLayout>