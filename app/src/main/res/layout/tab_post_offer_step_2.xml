<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tab_post_offer_step_2_upload_photo_title_textView"
        style="@style/i1_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/i1_15dp_margin"
        android:layout_marginTop="@dimen/i1_20dp_margin"
        android:text="@string/fragment_title_upload_photo" />

    <ImageView
        android:id="@+id/tab_post_offer_step_2_photo_imageView"
        android:layout_width="@dimen/addproduct_imageview_dimens"
        android:layout_height="@dimen/addproduct_imageview_dimens"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/i1_50dp_margin"
        android:src="@drawable/auto" />

    <LinearLayout
        android:id="@+id/tab_post_offer_step_2_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tab_post_offer_step_2_take_photo_button"
            style="@style/i1_button_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:drawableLeft="@drawable/take_photo_icon"
            android:drawablePadding="@dimen/i1_15dp_padding"
            android:paddingRight="@dimen/i1_20dp_padding"
            android:text="@string/button_take_photo"
            android:textAlignment="textStart" />

        <Button
            android:id="@+id/tab_post_offer_step_2_select_photo_button"
            style="@style/i1_button_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:drawableLeft="@drawable/select_photo_icon"
            android:drawablePadding="@dimen/i1_15dp_padding"
            android:text="@string/button_select_photo"
            android:textAlignment="textStart" />

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tab_post_offer_step_2_next_button"
        android:layout_below="@+id/tab_post_offer_step_2_linearLayout">

        <android.support.v7.widget.CardView
            style="@style/i1_card_view_without_content_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/i1_5dp_padding"
            android:paddingTop="@dimen/i1_5dp_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    style="@style/i1_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/tab_post_offer_step_2_title_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/enter_title"
                        android:inputType="textCapWords"
                        android:lines="1" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/i1_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/tab_post_offer_step_2_brand_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/enter_brand_manufacturer"
                        android:inputType="textCapWords"
                        android:lines="1" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/i1_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/tab_post_offer_step_2_model_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/enter_model"
                        android:inputType="textCapWords"
                        android:lines="1" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/i1_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/tab_post_offer_step_2_serialNo_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/enter_serialNo"
                        android:inputType="textCapWords"
                        android:lines="1" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/tab_post_offer_step_2_next_button"
        style="@style/i1_button_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/button_next" />

</RelativeLayout>