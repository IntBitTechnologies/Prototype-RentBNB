<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rowitem_recyclerview_categorylist_linearlayout"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:layout_marginLeft="@dimen/i1_10dp_margin"
    android:layout_marginRight="@dimen/i1_10dp_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="@dimen/addproduct_imageview_dimens"
        android:layout_height="wrap_content"
        style="@style/i1_card_view_without_content_padding"
        android:layout_marginLeft="@dimen/i1_5dp_margin"
        android:layout_marginRight="@dimen/i1_5dp_margin">

            <RelativeLayout
                android:id="@+id/addproduct_rowitem_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--@dimen/addproduct_imageview_dimens-->
                <ImageView
                    android:id="@+id/rowitem_recyclerview_categorylist_defaultimageview"
                    android:layout_width="@dimen/addproduct_imageview_dimens"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/glass" />

                <TextView
                    android:id="@+id/rowitem_recyclerview_categorylist_title_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="500ml"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:background="#65000000"
                    android:padding="@dimen/i1_5dp_padding"
                    android:layout_alignParentBottom ="true"
                    android:layout_centerHorizontal ="true" />

            </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
