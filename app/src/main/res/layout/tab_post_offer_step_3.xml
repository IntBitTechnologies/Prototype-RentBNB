<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tab_post_offer_step_3_next_button"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tab_post_offer_step_3_price_title_textView"
                style="@style/i1_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/i1_10dp_margin"
                android:layout_marginTop="@dimen/i1_20dp_margin"
                android:text="@string/fragment_title_add_price" />

            <android.support.v7.widget.CardView
                android:id="@+id/tab_post_offer_step_3_price_cardView"
                style="@style/i1_card_view_without_content_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab_post_offer_step_3_price_title_textView"
                android:paddingTop="@dimen/i1_5dp_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        style="@style/i1_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tab_post_offer_step_3_dailyRent_price_EditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/enter_daily_rental_price"
                            android:inputType="textCapWords"
                            android:lines="1" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        style="@style/i1_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tab_post_offer_step_3_weeklyRent_price_EditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/enter_weekly_rental_price"
                            android:inputType="textCapWords"
                            android:lines="1" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/i1_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tab_post_offer_step_3_monthlyRent_price_EditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/enter_monthly_rental_price"
                            android:inputType="textCapWords"
                            android:lines="1" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/i1_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tab_post_offer_step_3_deposit_price_EditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/enter_deposit_amount"
                            android:inputType="textCapWords"
                            android:lines="1" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/i1_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tab_post_offer_step_3_unitSale_price_EditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/enter_unit_sale_price"
                            android:inputType="textCapWords"
                            android:lines="1" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tab_post_offer_step_3_condition_title_textView"
                style="@style/i1_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab_post_offer_step_3_price_cardView"
                android:layout_centerHorizontal="false"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/i1_10dp_margin"
                android:layout_marginLeft="@dimen/i1_card_view_margin_8dp"
                android:layout_marginTop="@dimen/i1_15dp_margin"
                android:text="@string/specify_the_condition" />

            <android.support.v7.widget.CardView
                android:id="@+id/tab_post_offer_step_3_condition_cardView"
                style="@style/i1_card_view_without_content_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab_post_offer_step_3_condition_title_textView"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/i1_10dp_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatSeekBar
                        android:id="@+id/tab_post_offer_step_3_condition_seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/i1_15dp_margin"
                        android:max="10"
                        android:progress="5"
                        app:theme="@style/i1_SeekBarTheme" />

                    <TextView
                        android:id="@+id/tab_post_offer_step_3_condition_tracker_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/i1_10dp_margin" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/tab_post_offer_step_3_next_button"
        style="@style/i1_button_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/button_next" />

</RelativeLayout>