<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/i1_10dp_margin"
    android:clickable="true"
    android:focusable="true">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/i1_card_view"
        android:layout_marginTop="@dimen/i1_10dp_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/add_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/rowItem_thumbnails_ImageView"
                android:layout_marginRight="@dimen/i1_card_view_margin_8dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>