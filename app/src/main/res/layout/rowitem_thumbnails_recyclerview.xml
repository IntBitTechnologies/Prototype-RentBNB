<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/i1_10dp_margin"
    android:clickable="true"
    android:focusable="true">

    <android.support.v7.widget.CardView
        style="@style/i1_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/i1_10dp_margin"
        android:id="@+id/add_photo_card_view">

        <!--android:layout_width="75dp"
        android:layout_height="75dp"-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true">

            <!--android:layout_width="50dp"
            android:layout_height="50dp"-->
            <ImageView
                android:id="@+id/rowItem_thumbnails_ImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/i1_5dp_margin"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_upload_photo" />

            <TextView
                android:id="@+id/add_photo_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rowItem_thumbnails_ImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/i1_5dp_margin"
                android:text="@string/add_photo"
                android:textAlignment="center"
                android:visibility="gone"
                android:textStyle="bold" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>