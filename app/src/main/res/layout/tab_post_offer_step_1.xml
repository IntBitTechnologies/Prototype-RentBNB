<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/i1_card_view_without_content_padding"
        android:id="@+id/tab_post_offer_step_1_categories_cardview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/tab_post_offer_step_1_category_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/i1_10dp_margin"
                android:popupBackground="@color/white" />

            <Spinner
                android:id="@+id/tab_post_offer_step_1_subcategory_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab_post_offer_step_1_category_spinner"
                android:layout_margin="@dimen/i1_10dp_margin"
                android:popupBackground="@color/white" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_post_offer_step_1_categories_cardview"
        style="@style/i1_card_view_without_content_padding"
        android:paddingTop="@dimen/i1_5dp_padding">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/i1_text_input_layout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/EditText02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="5"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false"
                android:hint="@string/description" />

        </android.support.design.widget.TextInputLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/tab_post_offer_step_1_next_button"
        style="@style/i1_button_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/button_next" />

</RelativeLayout>