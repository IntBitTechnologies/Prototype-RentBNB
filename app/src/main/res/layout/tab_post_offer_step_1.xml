<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <include
        android:id="@+id/toolbar"
        layout="@layout/rentbnb_custom_toolbar_view" />

    <android.support.v7.widget.CardView
        android:id="@+id/tab_post_offer_step_1_categories_cardView"
        style="@style/i1_card_view_without_content_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_category_icon"
                android:gravity="top|left"
                android:layout_margin="@dimen/i1_10dp_margin"
                android:layout_gravity="center_vertical" />

            <Spinner
                android:id="@+id/tab_post_offer_step_1_category_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/i1_10dp_margin"
                android:popupBackground="@color/white" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/tab_post_offer_step_1_title_cardView"
        style="@style/i1_card_view_without_content_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_post_offer_step_1_categories_cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                style="@style/i1_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_title_icon"
                    android:drawablePadding="@dimen/i1_10dp_margin"
                    android:gravity="top|left"
                    android:hint="@string/title"
                    android:inputType="text"
                    android:scrollHorizontally="false" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/i1_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_brand_icon"
                    android:drawablePadding="@dimen/i1_10dp_margin"
                    android:gravity="top|left"
                    android:hint="@string/brand_manufacturer"
                    android:inputType="text"
                    android:scrollHorizontally="false" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/i1_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_model_number_icon"
                    android:drawablePadding="@dimen/i1_10dp_margin"
                    android:gravity="top|left"
                    android:hint="@string/model"
                    android:inputType="text"
                    android:scrollHorizontally="false" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/i1_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_serial_number_icon"
                    android:drawablePadding="@dimen/i1_10dp_margin"
                    android:gravity="top|left"
                    android:hint="@string/serial_number"
                    android:inputType="text"
                    android:scrollHorizontally="false" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/i1_card_view_without_content_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_post_offer_step_1_title_cardView"
        android:layout_above="@+id/tab_post_offer_step_1_next_button"
        android:paddingTop="@dimen/i1_5dp_padding">

        <android.support.design.widget.TextInputLayout
            style="@style/i1_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/EditText02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|left"
                android:hint="@string/description"
                android:drawableLeft="@drawable/ic_description_icon"
                android:drawablePadding="@dimen/i1_10dp_margin"
                android:inputType="textMultiLine"
                android:lines="5"
                android:scrollHorizontally="false" />

        </android.support.design.widget.TextInputLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/tab_post_offer_step_1_next_button"
        style="@style/i1_button_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/button_next" />

</RelativeLayout>