<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowitem_recyclerview_categorylist_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/i1_10dp_margin"
    android:layout_marginTop="@dimen/i1_10dp_margin"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        style="@style/i1_card_view_without_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/i1_10dp_margin"
            android:layout_marginTop="@dimen/i1_10dp_margin"
            android:layout_marginLeft="@dimen/i1_10dp_margin">

            <ImageView
                android:id="@+id/rowitem_recyclerview_categorylist_defaultimageview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/i1_10dp_margin"
                android:src="@drawable/glass" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wagnetr Paint Ready Sprayer - Interior"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home and Garden"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 15"
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/location_progress_bar"
                        android:progress="75" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/i1_15dp_margin"
                        android:layout_toRightOf="@id/location_progress_bar"
                        android:src="@drawable/drawer_locations" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rent"
                        android:textColor="@color/white"
                        android:paddingRight="@dimen/i1_20dp_padding"
                        android:paddingLeft="@dimen/i1_20dp_padding"
                        android:paddingTop="@dimen/i1_5dp_padding"
                        android:paddingBottom="@dimen/i1_5dp_padding"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:layout_alignParentEnd="true"
                        android:background="@color/button_rent"
                        android:layout_gravity="center_vertical"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>